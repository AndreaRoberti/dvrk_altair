#ifndef _svlConfig_h
#define _svlConfig_h

#include <cisstConfig.h>

// Using OpenCV for optimized image processing
#cmakedefine01 CISST_SVL_HAS_OPENCV2

// for backward compatibilities
#define CISST_SVL_HAS_OPENCV CISST_SVL_HAS_OPENCV2

// Using ZLIB for optimized image processing
#cmakedefine01 CISST_SVL_HAS_ZLIB

// Support for Videre Design SVS
#cmakedefine01 CISST_SVL_HAS_SVS

// Support for DirectShow
#cmakedefine01 CISST_SVL_HAS_DIRECTSHOW

// Support for libDC1394
#cmakedefine01 CISST_SVL_HAS_DC1394

// Support for IEEE1394B switch on Darwin
#cmakedefine01 CISST_SVL_DC1394_ENABLE_800Mbps

// Support for FFMPEG
#cmakedefine01 CISST_SVL_HAS_FFMPEG

// Support for video4linux2
#cmakedefine01 CISST_SVL_HAS_VIDEO4LINUX2

// Support for video4linux2
#cmakedefine01 CISST_SVL_HAS_MIL

// Support for X11
#cmakedefine01 CISST_SVL_HAS_X11

// Support for Xvideo
#cmakedefine01 CISST_SVL_HAS_XV

// Support for JPEG
#cmakedefine01 CISST_SVL_HAS_JPEG

// Support for PNG
#cmakedefine01 CISST_SVL_HAS_PNG

// Support for CUDA
#cmakedefine01 CISST_SVL_HAS_CUDA

// Support for BLACKMAGIC DECKLINK
#cmakedefine01 CISST_SVL_HAS_BM_DECKLINK

// Whether or not to use cisstNetlib
#cmakedefine01 CISST_SVL_HAS_CISSTNETLIB

#endif // _svlConfig_h


