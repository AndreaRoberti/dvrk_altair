/* -*- Mode: Javascript; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- */
{
    "custom-components":
    [
        {
            "shared-library": "sawForceDimensionSDK",
            "class-name": "mtsForceDimension",
            "constructor-arg": {
                "Name": "MTMR"
            }
        }
        ,
        {
            "shared-library": "sawKeyboard",
            "class-name": "mtsKeyboard",
            "constructor-arg": {
                "Name": "Keyboard"
            },
            "configure-parameter": "keyboard-dVRK-console.json"
        }
    ]
    ,
    "console-inputs":
    {
        "operator-present": {
            "component": "Keyboard",
            "interface": "OperatorPresent" // see file keyboard-dVRK-console.json
        }
        ,
        "clutch": {
            "component": "Keyboard",
            "interface": "Clutch"
        }
        ,
        "camera": {
            "component": "Keyboard",
            "interface": "Camera"
        }
    }
    ,
    "arms":
    [
        {
            "name": "MTMR",  // created previously using custom components
            "type": "MTM_GENERIC"
        }
        ,
        {
            "name": "PSM2",
            "type": "PSM",
            "io": "sawRobotIO1394-PSM2-29470_cal.xml",
            "pid": "sawControllersPID-PSM.xml",
            "kinematic": "psm-large-needle-driver.json"
        }
    ]
    ,
    "psm-teleops":  //Sigma ref frame is 45Â° tilted around z respect to dVRK MTMR ref frame
    [
        {
            "master": "MTMR",
            "slave": "PSM2",
            "rotation" : [[ 0.0000, -1.0000,  0.0000],
                          [ 1.0000, 0.0000,  0.0000],
                          [ 0.0000, 0.0000,  1.0000]]
        }
    ]
}
