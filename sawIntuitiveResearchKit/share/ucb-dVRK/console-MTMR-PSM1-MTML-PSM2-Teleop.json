/* -*- Mode: Javascript; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- */
{
    "io": {
        "footpedals": "footpedal.xml",
        "firewire-protocol": "broadcast-read-write"
    }
    ,
    "arms":
    [
        {
            "name": "PSM1",
            "type": "PSM",
            "io": "sawRobotIO1394-PSM1-32174-calibrated.xml",
            "pid": "../sawControllersPID-PSM.xml",
            "kinematic": "../psm-large-needle-driver.json"
        }
        ,
        {
            "name": "PSM2",
            "type": "PSM",
            "io": "sawRobotIO1394-PSM2-31000-calibrated.xml",
            "pid": "../sawControllersPID-PSM.xml",
            "kinematic": "../psm-large-needle-driver.json"
        }
        ,
        {
            "name": "MTMR",
            "type": "MTM",
            "io": "sawRobotIO1394-MTMR-32036-footpedal.xml",
            "pid": "../sawControllersPID-MTMR.xml",
            "kinematic": "../mtm.json"
        }
        ,
        {
            "name": "MTML",
            "type": "MTM",
            "io": "sawRobotIO1394-MTML-31976-calibrated.xml",
            "pid": "../sawControllersPID-MTML.xml",
            "kinematic": "../mtm.json"
        }
    ]
    ,
    "psm-teleops":
    [
        {
            "master": "MTMR",
            "slave": "PSM1",
            "period": 0.005, // in seconds
            "configure-parameter": {
                "rotation" : [[-1.0000,  0.0000,  0.0000],
    			              [ 0.0000, -1.0000,  0.0000],
    			              [ 0.0000,  0.0000,  1.0000]]
            }
        }
        ,
        {
            "master": "MTML",
            "slave": "PSM2",
            "period": 0.005, // in seconds
            "configure-parameter": {
                "rotation" : [[-1.0000,  0.0000,  0.0000],
    			              [ 0.0000, -1.0000,  0.0000],
    			              [ 0.0000,  0.0000,  1.0000]]
            }
        }
    ]
}
